<Window x:Class="ControlCompWithBubbleKeyboard.BubbleKeyboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BubbleKeyboard" Height="800" Width="800">
    <Grid>
        <Canvas Height="800" HorizontalAlignment="Left" Margin="0,0,0,0" Name="theCanvas" VerticalAlignment="Top" Width="800" >
            <Label Content="" Height="200"  Width="200" Canvas.Left ="300" Canvas.Top="300" Name="CenterBubble_Label" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" />
            <Ellipse Height="200" Width="200" Canvas.Left ="300"  Canvas.Top ="300" Name="CenterBubble_Ellipse" Stroke="Black" Fill="GreenYellow" Opacity="0.5" />
            <TextBox Canvas.Left="0" Canvas.Top="0" Height="50" Name="produced" Width="800" />
            <Button Canvas.Left="0" Canvas.Top="56" Content="Switch Hand to Right" Height="30" Name="SwitchHandsButton" Width="778" />
            <Button Canvas.Left="51" Canvas.Top="157" Content="Enter" Height="43" Name="Enter_Button" Width="109" />
        </Canvas>
    </Grid>
</Window>
